<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1703A9F4"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/my_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter first number"
        android:textSize="35dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/my_input_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter second number"
        android:textSize="35dp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="don't press submit button before input number"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <Button
        android:id="@+id/My_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#8BC34A"
        android:text="+"
        android:textSize="40dp" />

    <Button
        android:id="@+id/My_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#FFEB3B"
        android:text="-"
        android:textSize="40dp" />

    <Button
        android:id="@+id/My_button_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#FF5722"
        android:text="x"
        android:textSize="40dp" />

    <Button
        android:id="@+id/My_button_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#2273FF"
        android:text="/"

        android:textSize="40dp" />

    </LinearLayout>


</LinearLayout>